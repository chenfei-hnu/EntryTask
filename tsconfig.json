{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react",
        "lib": ["es2015", "dom", "es2015.promise"],
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "inlineSources": true,
        "typeRoots": ["./node_modules/@types", "./types/"],
        "baseUrl": ".",
        "paths": {
            "@Types": ["./src/types/index.tsx"],
            "@Lang": ["./src/assets/lang.tsx"],
            "@api/*": ["./src/api/*"],
            "@components/*": ["./src/components/*"],
            "@pages/*": ["./src/pages/*"],
            "@common/*": ["./src/components/common/*"],
            "@Header": ["./src/components/header/Header.tsx"],
            "@PrivateRoute": ["./src/components/common/PrivateRoute.tsx"],
            "@context/*": ["./src/context/*"],
            "@reducers/*": ["./src/reducers/*"],
            "@Routes": ["./src/routes/Routes.tsx"],
            "@assets/*": ["./src/assets/*"],
            "@Utils": ["./src/util/utils.tsx"],
            "@App": ["./src/pages/App.tsx"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
